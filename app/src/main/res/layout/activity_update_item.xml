<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_item"
    android:layout_width="match_parent"
    android:background="@drawable/pkbg"
    android:layout_height="match_parent"
    tools:context="com.example.pooja.pk_electronics.activity.AddItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorActionbar"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:onClick="backClick1"
            android:src="@drawable/backarrow" />
        <TextView
            android:textStyle="italic"
            android:text="PK Electronics"
            android:textColor="@color/colorGreen"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <EditText
        android:id="@+id/price11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product1"
        android:textColor="@color/colorGreen"

        android:layout_alignStart="@+id/product1"
        android:layout_below="@+id/product1"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Price1"
        android:inputType="number" />

    <EditText
        android:id="@+id/price21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/price11"
        android:layout_alignStart="@+id/price11"
        android:layout_below="@+id/price11"         android:textColor="@color/colorGreen"

        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Price2"
        android:inputType="number" />

    <EditText
        android:id="@+id/price31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/price21"
        android:layout_alignStart="@+id/price21"
        android:layout_below="@+id/price21"
        android:layout_marginTop="43dp"
        android:ems="10"         android:textColor="@color/colorGreen"

        android:hint="Price3"
        android:inputType="number" />

    <Button
        android:background="@color/colorActionbar"
        android:textColor="@color/colorGreen"
        android:id="@+id/submitProduct1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Submit" />

    <EditText
        android:textColor="@color/colorGreen"

        android:id="@+id/product1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Product name"
        android:inputType="textPersonName"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
